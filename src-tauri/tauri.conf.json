{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "spotify-mini-player",
  "version": "0.1.0",
  "identifier": "com.jaron.spotify-mini-player",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Spotify Mini",
        "decorations": false,
        "width": 400,
        "height": 200,
        "resizable": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": ["https://*.spotify.com/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
